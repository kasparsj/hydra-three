{
  "name": "hydra-synth",
  "version": "1.4.1",
  "description": "hydra-three: three.js-powered hydra fork for creative coding",
  "type": "module",
  "main": "./dist/hydra-synth.js",
  "exports": {
    ".": {
      "import": "./src/package-entry.js",
      "require": "./dist/hydra-synth.js"
    },
    "./src/glsl/glsl-functions.js": {
      "import": "./src/glsl/glsl-functions.js",
      "require": "./src/glsl/glsl-functions.js"
    }
  },
  "unpkg": "./dist/hydra-synth.js",
  "files": [
    "dist/",
    "src/",
    "examples/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev-ssl": "budo ./dev/index.js --ssl --open --live --port 8000 --",
    "dev": "budo ./dev/index.js --open --live --port 8000 -- -p esmify -t glslify",
    "build": "browserify ./src/index.js -p esmify -t glslify --standalone Hydra > dist/hydra-synth.js",
    "build:debug": "browserify ./src/index.js --debug -p esmify -t glslify --standalone Hydra > dist/hydra-synth.js",
    "test:smoke:canvas": "node ./scripts/smoke/canvas-smoke.mjs",
    "test:smoke:module": "node ./scripts/smoke/module-load-smoke.mjs",
    "test:smoke:browser": "node ./scripts/smoke/browser-smoke.mjs",
    "test:smoke": "npm run test:smoke:canvas && npm run test:smoke:module",
    "pack:check": "npm pack --dry-run",
    "ci:check": "npm run build && npm run test:smoke && npm run pack:check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kasparsj/hydra-three.git"
  },
  "keywords": [
    "webgl",
    "regl",
    "graphics",
    "livecoding",
    "synth"
  ],
  "author": "ojack",
  "license": "AGPL",
  "bugs": {
    "url": "https://github.com/kasparsj/hydra-three/issues"
  },
  "homepage": "https://github.com/kasparsj/hydra-three#readme",
  "dependencies": {
    "gl-mat4": "^1.2.0",
    "glsl-film-grain": "^1.0.4",
    "meyda": "^5.6.3",
    "raf-loop": "^1.1.3",
    "three": "^0.157.0"
  },
  "devDependencies": {
    "browserify": "^17.0.0",
    "budo": "^11.8.4",
    "esmify": "^2.1.1",
    "glslify": "^7.1.1",
    "playwright": "1.56.1"
  }
}
